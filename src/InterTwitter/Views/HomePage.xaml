<?xml version="1.0" encoding="UTF-8"?>
<views:BaseContentPage  xmlns:views="clr-namespace:InterTwitter.Views"
                        xmlns="http://xamarin.com/schemas/2014/forms"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:controls="clr-namespace:InterTwitter.Controls" 
                        xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
                        xmlns:local="clr-namespace:InterTwitter.Enums"
                        x:Class="InterTwitter.Views.HomePage">
    
    <views:BaseContentPage.Resources>

        <ResourceDictionary>

            <DataTemplate x:Key="OwlPictureTemplate">
                
                <ViewCell>

                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Image Source="{Binding AuthorAvatar}"
                                                        Grid.Row="0" 
                                                        Grid.Column="0" 
                                                        Grid.RowSpan="3" 
                                                        Margin="10,0,10,0"
                                                        VerticalOptions="Start"
                                                        HorizontalOptions="Center"
                                                        Aspect="AspectFit" 
                                                        HeightRequest="70" 
                                                        WidthRequest="70"/>

                        <!--<ffimageloading:CachedImage Grid.Row="0" 
                                                        Grid.Column="0" 
                                                        Grid.RowSpan="3" 
                                                        Margin="10,0,10,0"
                                                        VerticalOptions="Start"
                                                        HorizontalOptions="Center"
                                                        DownsampleToViewSize="true"
                                                        Aspect="AspectFit" 
                                                        HeightRequest="70" 
                                                        WidthRequest="70"
                                                        Source="{Binding AuthorAvatar}">

                        </ffimageloading:CachedImage>-->

                        <StackLayout Grid.Row="0"
                                     Grid.Column="1">

                            <Label Text="{Binding PostLabel}"/>

                            <Image Source="{Binding PostPhoto}"/>

                            <Label Text="{Binding PostDescription}"/>

                            <Label Text="{Binding PostTime}"/>

                        </StackLayout>

                    </Grid>

                </ViewCell>
                
            </DataTemplate>

            <DataTemplate x:Key="OwlTwoPicturesTemplate">

                <ViewCell>

                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Image Source="{Binding AuthorAvatar}"
                               Grid.Row="0" 
                               Grid.Column="0" 
                               Grid.RowSpan="3" 
                               Margin="10,0,10,0"
                               VerticalOptions="Start"
                               HorizontalOptions="Center"
                               Aspect="AspectFit" 
                               HeightRequest="70" 
                               WidthRequest="70"/>

                        <!--<ffimageloading:CachedImage Grid.Row="0" 
                                                        Grid.Column="0" 
                                                        Grid.RowSpan="3" 
                                                        Margin="10,0,10,0"
                                                        VerticalOptions="Start"
                                                        HorizontalOptions="Center"
                                                        DownsampleToViewSize="true"
                                                        Aspect="AspectFit" 
                                                        HeightRequest="70" 
                                                        WidthRequest="70"
                                                        Source="{Binding AuthorAvatar}">

                        </ffimageloading:CachedImage>-->

                        <StackLayout Grid.Row="0"
                                     Grid.Column="1">

                            <Label Text="{Binding PostLabel}"/>

                            <StackLayout Orientation="Horizontal">

                                <Image Source="{Binding PostPhotoOne}"
                                       HeightRequest="80"
                                       WidthRequest="80"
                                       Aspect="AspectFit"/>

                                <Image Source="{Binding PostPhotoTwo}"
                                       HeightRequest="80"
                                       WidthRequest="80"
                                       Aspect="AspectFit"/>

                                <Image Source="{Binding PostPhotoThree}"
                                       HeightRequest="80"
                                       WidthRequest="80"
                                       Aspect="AspectFit"/>

                            </StackLayout>

                            <StackLayout Orientation="Horizontal">

                                <Image Source="{Binding PostPhotoFour}"
                                       HeightRequest="80"
                                       WidthRequest="80"
                                       Aspect="AspectFit"/>

                                <Image Source="{Binding PostPhotoFive}"
                                       HeightRequest="80"
                                       WidthRequest="80"
                                       Aspect="AspectFit"/>

                                <Image Source="{Binding PostPhotoSix}"
                                       HeightRequest="80"
                                       WidthRequest="80"
                                       Aspect="AspectFit"/>

                            </StackLayout>

                            <Label Text="{Binding PostDescription}"/>

                            <Label Text="{Binding PostTime}"/>

                        </StackLayout>

                    </Grid>

                </ViewCell>

            </DataTemplate>

            <local:OwlTemplateSelector x:Key="OwlTemplateSelector"
                                       OwlPictureTemplate="{StaticResource OwlPictureTemplate}"
                                       OwlTwoPicturesTemplate="{StaticResource OwlTwoPicturesTemplate}"/>
        </ResourceDictionary>
    </views:BaseContentPage.Resources>

<Grid>
    
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="48"/>
        </Grid.RowDefinitions>

        <controls:HomePageNavigationBar Grid.Row="0"/>

        <ListView Grid.Row="1"
                  ItemsSource="{Binding Owls}"
                  HasUnevenRows="True"
                  ItemTemplate="{StaticResource OwlTemplateSelector}"/>

        <BoxView Grid.Row="2"
                 VerticalOptions="Fill"
                 HorizontalOptions="Fill"
                 BackgroundColor="Aqua"/>

    </Grid>

</views:BaseContentPage>
