<?xml version="1.0" encoding="UTF-8"?>
<DataTemplate xmlns="http://xamarin.com/schemas/2014/forms" 
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:videoplayer="clr-namespace:Octane.Xamarin.Forms.VideoPlayer;assembly=Octane.Xamarin.Forms.VideoPlayer"
              x:Class="InterTwitter.Views.Templates.PostVideoTemplate">

    <Grid Padding="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- POST DESCRIPTION LABEL -->
        <Label Grid.Row="0"
               Text="{Binding Text}"
               TextColor="{StaticResource tx_3}"/>

        <!-- VIDEO FILE -->
        <videoplayer:VideoPlayer Grid.Row="0"
                                 Source="{Binding Video}"
                                 VerticalOptions="Fill"
                                 HorizontalOptions="Fill"
                                 AutoPlay="False"
                                 DisplayControls="True"/>

        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="3"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <!-- DATE LABEL -->
            <Label Grid.Column="0"
                   Text="{Binding PostDate}"
                   TextColor="{StaticResource tx_5}"
                   VerticalOptions="Center"/>

            <BoxView Grid.Column="1"
                     Style="{StaticResource boxViewPoint}"
                     VerticalOptions="Center"/>

            <!-- TIME LABEL -->
            <Label Grid.Column="2"
                   Text="{Binding PostTime}"
                   TextColor="{StaticResource tx_5}"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"/>

            <!-- LIKE BUTTON -->
            <Button Grid.Column="3"
                    x:Name="likeButton"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    BackgroundColor="Transparent"
                    HeightRequest="34"
                    CornerRadius="17"                       
                    ImageSource="ic_like_gray.png"
                    Command="{Binding BindingContext.LikeClickCommand,
                              Source={RelativeSource AncestorType={x:Type CollectionView}}}" 
                              CommandParameter="{Binding .}">

                <Button.Triggers>

                    <DataTrigger TargetType="Button"
                                 Binding="{Binding 
                                 Path=IsLiked}"
                                 Value="true">

                        <Setter Property="ImageSource" Value="ic_like_blue.png"/>

                    </DataTrigger>

                </Button.Triggers>

            </Button>

            <!-- LIKE COUNT LABEL -->
            <Label Grid.Column="4"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"
                   TextColor="{StaticResource tx_5}"
                   Text="{Binding LikesCount}">

                <Label.Triggers>

                    <DataTrigger TargetType="Label"
                                 Binding="{Binding 
                                 Path=IsLiked}"
                                 Value="true">

                        <Setter Property="TextColor" Value="{StaticResource bg_2}"/>

                    </DataTrigger>

                </Label.Triggers>

            </Label>

            <!-- BOOKMARK BUTTON -->
            <Button Grid.Column="5"
                    x:Name="bookmarkButton"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    ImageSource="ic_bookmarks_gray.png"
                    BackgroundColor="Transparent"
                    WidthRequest="30"
                    HeightRequest="34"
                    CornerRadius="17"
                    Command="{Binding BindingContext.BookMarkCommand,
                              Source={RelativeSource AncestorType={x:Type CollectionView}}}" 
                              CommandParameter="{Binding .}">

                <Button.Triggers>

                    <DataTrigger TargetType="Button"
                                 Binding="{Binding 
                                 Path=IsBookMarked}"
                                 Value="true">

                        <Setter Property="ImageSource" Value="ic_bookmarks_blue.png"/>

                    </DataTrigger>

                </Button.Triggers>

            </Button>

        </Grid>

    </Grid>
    
</DataTemplate>